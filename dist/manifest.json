 {
  "manifest_version": 2,
  "name": "Subfilter for Netflix",
  "description" : "Watch Netflix with filtered subtitles for foreign language study",
  "version": "0.3.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    "filters.js", "custom_filters.js"
  ]
 }
